<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="true"
    tools:context="ark.ark.MainActivity"
    android:keepScreenOn="true" >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/transtext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_title"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        android:hint="Add a title"
        android:inputType="textCapWords"
        android:textColor="@color/colorText"
        android:elevation="2dp"
        android:imeOptions="actionDone"
        android:cursorVisible="false"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <EditText
        android:id="@+id/trans_edit_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/montserrat"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:cursorVisible="true"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/ed_title" />

    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/ed_title" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/botNavig"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/colBackground"
        app:itemTextColor="@color/colBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navig" />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_rec"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="128dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
        android:onClick="record_switch"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="@+id/botNavig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/mic_full_inv" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_edit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/colBackground"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
        android:onClick="onEditClick"
        android:scaleType="center"
        app:borderWidth="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_rec"
        app:layout_constraintEnd_toEndOf="parent"
        app:pressedTranslationZ="12dp"
        app:srcCompat="@drawable/edit" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_copy"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/colBackground"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
        android:onClick="onCopyClick"
        android:scaleType="center"
        app:borderWidth="1dp"
        app:layout_constraintBottom_toTopOf="@+id/button_edit"
        app:layout_constraintEnd_toEndOf="@+id/button_edit"
        app:srcCompat="@drawable/copy_c" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="128dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/botNavig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_share"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/colBackground"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
        android:onClick="onShareClick"
        android:scaleType="center"
        app:borderWidth="1dp"
        app:layout_constraintBottom_toTopOf="@+id/button_copy"
        app:layout_constraintEnd_toEndOf="@+id/button_copy"
        app:srcCompat="@drawable/share_c" />

</android.support.constraint.ConstraintLayout>
