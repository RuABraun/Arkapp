<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    tools:context="typefree.typefree.Manage">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_files"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/recview_background"
        app:layout_constraintBottom_toTopOf="@+id/botNavigB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/botNavigB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navig"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/colBackground"
        app:itemTextColor="@color/colBackground" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_rec"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/border_white"
        android:backgroundTint="@color/colorPrimary"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
        android:onClick="onAddPress"
        android:scaleType="center"
        app:borderWidth="2dp"
        app:layout_constraintBottom_toTopOf="@+id/botNavigB"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/circle" />

</android.support.constraint.ConstraintLayout>
